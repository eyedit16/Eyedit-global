<script>
/* ========== Small helpers ========== */
document.getElementById("y").textContent = new Date().getFullYear();

// Back to top
const toTop = document.getElementById('toTop');
const toggleTop = () => { toTop.style.display = (window.scrollY > 600) ? 'inline-flex' : 'none'; };
window.addEventListener('scroll', toggleTop, { passive:true });
toggleTop();
toTop.addEventListener('click', () => window.scrollTo({top:0,behavior:'smooth'}));

// Progress bar
const bar = document.getElementById('scrollProgressBar');
const updateProgress = () => {
  const doc = document.documentElement;
  const scrollTop = doc.scrollTop || document.body.scrollTop;
  const scrollHeight = doc.scrollHeight - doc.clientHeight;
  const pct = scrollHeight > 0 ? (scrollTop / scrollHeight) * 100 : 0;
  bar.style.width = pct.toFixed(2) + '%';
};
window.addEventListener('scroll', updateProgress, { passive:true });
window.addEventListener('resize', updateProgress);
updateProgress();

/* ========== Navigation (ROBUST, NO onclick needed) ========== */
(() => {
  const pages = ['home','iqs','audiovisual','ccs','eyevision'];

  function showPage(key){
    if(!pages.includes(key)) key = 'home';

    pages.forEach(k=>{
      const el = document.getElementById('page-'+k);
      if(el) el.classList.toggle('hidden', k !== key);
    });

    pages.forEach(k=>{
      const btn = document.getElementById('nav-'+k);
      if(btn) btn.classList.toggle('active', k === key);
    });

    history.replaceState(null,'', key==='home' ? '#home' : '#'+key);
    window.scrollTo({top:0,behavior:'smooth'});
  }
  window.showPage = showPage;

  pages.forEach(k=>{
    const btn = document.getElementById('nav-'+k);
    if(btn) btn.addEventListener('click', () => showPage(k));
  });

  const start = (location.hash || '#home').replace('#','');
  showPage(pages.includes(start) ? start : 'home');
})();

/* ========== Lightbox ========== */
const lbOverlay = document.getElementById('lbOverlay');
const lbClose = document.getElementById('lbClose');
const lbTitle = document.getElementById('lbTitle');
const lbImg = document.getElementById('lbImg');

const mockSVG = (title) => {
  const safe = (title || 'Preview').replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;');
  const svg =
    `<svg xmlns="http://www.w3.org/2000/svg" width="1600" height="900">
      <defs>
        <linearGradient id="g" x1="0" x2="1">
          <stop offset="0" stop-color="rgba(56,189,248,0.55)"/>
          <stop offset="1" stop-color="rgba(255,255,255,0.10)"/>
        </linearGradient>
      </defs>
      <rect width="100%" height="100%" fill="rgba(2,6,23,1)"/>
      <rect width="100%" height="100%" fill="url(#g)" opacity="0.35"/>
      <circle cx="260" cy="210" r="160" fill="rgba(56,189,248,0.35)"/>
      <text x="80" y="520" font-family="Arial" font-size="64" fill="rgba(229,231,235,0.95)" font-weight="700">${safe}</text>
      <text x="80" y="600" font-family="Arial" font-size="28" fill="rgba(229,231,235,0.65)">Placeholder preview · Replace with real images later</text>
    </svg>`;
  return 'data:image/svg+xml;charset=utf-8,' + encodeURIComponent(svg);
};

const openLightbox = (src, title) => {
  lbTitle.textContent = title || 'Preview';
  lbImg.src = src;
  lbOverlay.classList.add('show');
  document.body.style.overflow = 'hidden';
};
const closeLightbox = () => {
  lbOverlay.classList.remove('show');
  document.body.style.overflow = '';
  setTimeout(() => { lbImg.src = ''; }, 50);
};
lbClose.addEventListener('click', closeLightbox);
lbOverlay.addEventListener('click', (e) => { if (e.target === lbOverlay) closeLightbox(); });
window.addEventListener('keydown', (e) => { if (e.key === 'Escape' && lbOverlay.classList.contains('show')) closeLightbox(); });

document.addEventListener('click', (e) => {
  const img = e.target.closest('img.lb');
  if (img) { openLightbox(img.getAttribute('src'), img.getAttribute('alt') || 'Image'); return; }
  const ph = e.target.closest('.ph');
  if (ph) { const t = ph.getAttribute('data-lb-title') || 'Preview'; openLightbox(mockSVG(t), t); }
});

