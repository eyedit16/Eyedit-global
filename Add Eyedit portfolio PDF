<script>
/* YEAR */
document.getElementById("y").textContent = new Date().getFullYear();

/* TOP + PROGRESS */
const toTop = document.getElementById('toTop');
const pbar = document.getElementById('progressBar');
const update = () => {
  const doc = document.documentElement;
  const st = doc.scrollTop || document.body.scrollTop;
  const sh = doc.scrollHeight - doc.clientHeight;
  const pct = sh > 0 ? (st / sh) * 100 : 0;
  pbar.style.width = pct.toFixed(2) + '%';
  toTop.style.display = (st > 600) ? 'inline-flex' : 'none';
};
window.addEventListener('scroll', update, {passive:true});
window.addEventListener('resize', update);
update();
toTop.addEventListener('click', () => window.scrollTo({top:0,behavior:'smooth'}));

/* NAVIGATION (robust) */
(() => {
  const pages = ['home','iqs','audiovisual','ccs','eyevision'];

  function showPage(key){
    if(!pages.includes(key)) key='home';

    pages.forEach(k=>{
      const el = document.getElementById('page-'+k);
      if(el) el.classList.toggle('hidden', k!==key);
    });

    pages.forEach(k=>{
      const btn = document.getElementById('nav-'+k);
      if(btn) btn.classList.toggle('active', k===key);
    });

    history.replaceState(null,'', key==='home' ? '#home' : '#'+key);
    window.scrollTo({top:0,behavior:'smooth'});
  }
  window.showPage = showPage;

  pages.forEach(k=>{
    const btn = document.getElementById('nav-'+k);
    if(btn) btn.addEventListener('click', () => showPage(k));
  });

  document.querySelectorAll('[data-go]').forEach(el=>{
    el.addEventListener('click', () => showPage(el.getAttribute('data-go')));
  });

  document.getElementById('brandHome').addEventListener('click', () => showPage('home'));
  document.getElementById('brandHome').addEventListener('keydown', (e) => { if(e.key==='Enter') showPage('home'); });

  const ctaStart = document.getElementById('ctaStart');
  if(ctaStart) ctaStart.addEventListener('click', () => showPage('iqs'));

  const goContact = () => { showPage('home'); setTimeout(()=>location.hash='#contact', 50); };
  ['btnContactFromIqs','btnContactFromAv','btnContactFromCcs','btnContactFromEv'].forEach(id=>{
    const b=document.getElementById(id); if(b) b.addEventListener('click', goContact);
  });

  const start = (location.hash || '#home').replace('#','');
  showPage(pages.includes(start) ? start : 'home');
})();

/* LIGHTBOX */
const lbOverlay = document.getElementById('lbOverlay');
const lbClose = document.getElementById('lbClose');
const lbTitle = document.getElementById('lbTitle');
const lbImg = document.getElementById('lbImg');

const mockSVG = (title) => {
  const safe = (title || 'Preview').replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;');
  const svg = `<svg xmlns="http://www.w3.org/2000/svg" width="1600" height="900">
    <defs><linearGradient id="g" x1="0" x2="1"><stop offset="0" stop-color="rgba(56,189,248,0.55)"/><stop offset="1" stop-color="rgba(167,139,250,0.28)"/></linearGradient></defs>
    <rect width="100%" height="100%" fill="rgba(5,8,22,1)"/><rect width="100%" height="100%" fill="url(#g)" opacity="0.35"/>
    <circle cx="280" cy="220" r="170" fill="rgba(56,189,248,0.30)"/>
    <text x="90" y="520" font-family="Arial" font-size="64" fill="rgba(229,231,235,0.95)" font-weight="700">${safe}</text>
    <text x="90" y="600" font-family="Arial" font-size="28" fill="rgba(229,231,235,0.65)">Placeholder · Replace with real images later</text>
  </svg>`;
  return 'data:image/svg+xml;charset=utf-8,' + encodeURIComponent(svg);
};
const openLB = (src, title) => {
  lbTitle.textContent = title || 'Preview';
  lbImg.src = src;
  lbOverlay.classList.add('show');
  document.body.style.overflow='hidden';
};
const closeLB = () => {
  lbOverlay.classList.remove('show');
  document.body.style.overflow='';
  setTimeout(()=>{ lbImg.src=''; },50);
};
lbClose.addEventListener('click', closeLB);
lbOverlay.addEventListener('click', (e)=>{ if(e.target===lbOverlay) closeLB(); });
window.addEventListener('keydown', (e)=>{ if(e.key==='Escape' && lbOverlay.classList.contains('show')) closeLB(); });

document.addEventListener('click', (e)=>{
  const ph = e.target.closest('.ph');
  if(ph){
    const t = ph.getAttribute('data-lb-title') || 'Preview';
    openLB(mockSVG(t), t);
  }
});

