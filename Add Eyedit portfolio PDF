function setLang(lang){
  const dict = I18N[lang] || I18N.ca;
  localStorage.setItem("ey_lang", lang);
  document.documentElement.lang = (lang==="pt-BR") ? "pt-BR" : lang;
  document.querySelectorAll("[data-i18n]").forEach(el=>{
    const key = el.getAttribute("data-i18n");
    if(dict[key]) el.textContent = dict[key];
  });
  const sel=document.getElementById("lang");
  if(sel) sel.value = lang;
}
(() => {
  const saved = localStorage.getItem("ey_lang");
  const guess = (navigator.language||"ca").toLowerCase().startsWith("pt") ? "pt-BR" :
                (navigator.language||"ca").toLowerCase().startsWith("es") ? "es" :
                (navigator.language||"ca").toLowerCase().startsWith("fr") ? "fr" :
                (navigator.language||"ca").toLowerCase().startsWith("en") ? "en" : "ca";
  setLang(saved || guess);
  const sel=document.getElementById("lang");
  if(sel) sel.addEventListener("change",(e)=> setLang(e.target.value));
})();
</script>

