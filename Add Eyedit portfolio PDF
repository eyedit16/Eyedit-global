function normalizeLang(raw){
  if(!raw) return "ca";
  const l = raw.toLowerCase();
  if(l.startsWith("pt")) return "pt-BR";
  if(l.startsWith("ca")) return "ca";
  if(l.startsWith("es")) return "es";
  if(l.startsWith("fr")) return "fr";
  return "en";
}

function setLang(lang){
  const chosen = I18N[lang] ? lang : "ca";
  localStorage.setItem("eyedit_lang", chosen);

  document.documentElement.lang = (chosen === "pt-BR") ? "pt-BR" : chosen;
  const dict = I18N[chosen];

  document.querySelectorAll("[data-i18n]").forEach(el=>{
    const key = el.getAttribute("data-i18n");
    if(dict[key]) el.textContent = dict[key];
  });

  const sel = document.getElementById("lang");
  if(sel) sel.value = chosen;
}

// init language
(function(){
  const saved = localStorage.getItem("eyedit_lang");
  const browser = normalizeLang(navigator.language);
  setLang(saved || browser);

  const sel = document.getElementById("lang");
  if(sel){
    sel.addEventListener("change", (e)=> setLang(e.target.value));
  }
})();
</script>
<script>
const pages = ['home','audiovisual','ccs','eyevision'];

function showPage(key){
  pages.forEach(k=>{
    const el = document.getElementById('page-'+k);
    if(!el) return;
    el.classList.toggle('hidden', k!==key);
  });

  pages.forEach(k=>{
    const btn = document.getElementById('nav-'+k);
    if(!btn) return;
    btn.classList.toggle('active', k===key);
  });

  window.scrollTo({top:0,behavior:'smooth'});
  history.replaceState(null,'', key==='home' ? '#home' : '#'+key);
}

window.showPage = showPage;

// iniciar
const start = (location.hash || '#home').replace('#','');
showPage(pages.includes(start) ? start : 'home');
</script>
